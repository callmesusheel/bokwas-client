<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myNamespace="http://schemas.android.com/apk/res/com.bokwas" >

    <!--
          <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="#0070B9"
        android:orientation="vertical" >
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="@color/dark_color"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="bokwas"
            android:textColor="@color/header_text_color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <RelativeLayout
                android:id="@+id/header_item"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/header_button"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/header_item_image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/message_icon" />

                <TextView
                    android:id="@+id/header_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/header_item_image"
                    android:text="30"
                    android:textColor="@color/header_text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/messageButtonLayout"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/header_button"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/messageHeaderButton"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:background="@drawable/header_button"
                    android:src="@drawable/message_icon"
                    android:textColor="@color/fb_post_color" />

                <TextView
                    android:id="@+id/messageHeaderCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/circle_red"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/header_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/newPostButton"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:background="@drawable/header_button"
                android:padding="14dp"
                android:src="@drawable/plus_icon"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/notificationButtonLayout"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/header_button"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/notificationButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_grey"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/header_text_color"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <!--
                 <TextView
                android:id="@+id/notificationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="@color/header_text_color"
                android:textStyle="bold"
                android:visibility="visible" />
                -->
            </RelativeLayout>

            <ImageView
                android:id="@+id/overflowButton"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/header_button"
                android:padding="8dp"
                android:src="@drawable/ic_menu_moreoverflow_normal_holo_dark" />
        </LinearLayout>
    </RelativeLayout>

</merge>