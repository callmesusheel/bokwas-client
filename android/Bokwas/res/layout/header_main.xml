<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myNamespace="http://schemas.android.com/apk/res/com.bokwas" >

    <!--
          <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:background="#0070B9"
        android:orientation="vertical" >
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="#F99238"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="bokwas"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <RelativeLayout
                android:id="@+id/header_item"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/header_button"
                android:visibility="gone"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/header_item_image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/message_icon" />

                <TextView
                    android:id="@+id/header_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#454545"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/header_item_image" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/messageHeaderButton"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|right"
                android:background="@drawable/header_button"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:src="@drawable/message_icon"
                android:textColor="#ffffff" />
            
            <TextView android:id="@+id/messageHeaderCount"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:gravity="left|center_vertical"
                android:text="99"
                android:textColor="#454545"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/newPostButton"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:padding="14dp"
                android:background="@drawable/header_button"
                android:src="@drawable/plus_icon"
                android:visibility="gone" />
            
            <RelativeLayout
                android:id="@+id/notificationButtonLayout"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/header_button" >
            
            <TextView
                android:id="@+id/notificationButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_red"
                android:text="0"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#454545"
                android:textStyle="bold"
                android:visibility="visible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/overflowButton"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/header_button"
                android:padding="8dp"
                android:src="@drawable/ic_menu_moreoverflow_normal_holo_dark" />
        </LinearLayout>
    </RelativeLayout>

</merge>