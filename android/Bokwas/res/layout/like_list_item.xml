<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle_white_stroke"
    android:gravity="center_vertical"
    android:layout_height="64dp" >

    <ImageView
        android:id="@+id/likes_profile_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:src="@drawable/avatar_15" />

    <TextView
        android:id="@+id/likes_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/likes_profile_pic"
        android:lines="1"
        android:maxLines="1"
        android:text="Evil Philanthropist"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>